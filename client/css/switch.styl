.switch
  border 1px solid $color
  width 4em
  cursor pointer
  user-select none
  -webkit-user-select none
  .choose
    display inline-block
    width 2em
    height 1.5em
    line-height 1.5em
    text-align center
    color $color
    background-color $background
    transition all .3s
    &.select
      color $background
      background-color $color
